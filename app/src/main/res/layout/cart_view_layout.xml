<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewQuoteItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/minusQuoteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_3sdp"
                android:visibility="gone"
                android:scaleType="fitStart"
                android:src="@drawable/minus_quote_item" />

            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1.9"
                android:fontFamily="@font/inter_medium"
                android:text=" Bisleri 100 ML"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/cartItemGst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.4"
                android:fontFamily="@font/inter_medium"
                android:text="20%"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/afterAddLayout"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/CartQuantityText"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"

                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/CartQuantityUnitText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="Pcs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/cartItemRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.6"
                android:fontFamily="@font/inter_medium"
                android:gravity="end"
                android:text="2000"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/cartItemTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.6"
                android:fontFamily="@font/inter_medium"
                android:gravity="end"
                android:text="1"
                android:digits="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black" />
    </LinearLayout>


</androidx.cardview.widget.CardView>